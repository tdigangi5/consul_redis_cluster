# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure(2) do |config|
  # Create node1
  config.vm.define :node1 do |app_config|
      app_config.vm.box = "centos/7"
      app_config.vm.hostname = "node1"
      app_config.vm.network :private_network, ip: "192.168.10.10"
      app_config.vm.provider "virtualbox" do |vb|
          vb.memory = "2048"
      end
      app_config.vm.provision "shell", path: "server_setup.sh"
      # Launching ansible playbook
      app_config.vm.provision "ansible" do |ansible|
        ansible.playbook = "redis-setup.yml"
      end
  end
  # Create node2
  config.vm.define :node2 do |app_config|
      app_config.vm.box = "centos/7"
      app_config.vm.hostname = "node2"
      app_config.vm.network :private_network, ip: "192.168.10.11"
      app_config.vm.provider "virtualbox" do |vb|
          vb.memory = "2048"
      end
      app_config.vm.provision "shell", path: "server_setup.sh"
  end
  # Create node3
  config.vm.define :node3 do |app_config|
      app_config.vm.box = "centos/7"
      app_config.vm.hostname = "node3"
      app_config.vm.network :private_network, ip: "192.168.10.12"
      app_config.vm.provider "virtualbox" do |vb|
          vb.memory = "2048"
      end
      app_config.vm.provision "shell", path: "server_setup.sh"
  end
end
